# Exchange settings
EWS_SERVER=mail.example.com
EWS_EMAIL=user@example.com
EWS_USERNAME=DOMAIN\\user
EWS_PASSWORD=changeme
EWS_AUTH_TYPE=NTLM
EWS_VERIFY_SSL=true

# Intervals (seconds)
UPDATE_INTERVAL=60
APPOINTMENT_REFRESH_INTERVAL=30
APPOINTMENT_NOTIFY_INTERVAL=900
MAIL_REFRESH_INTERVAL=60

# Telegram bots
APPOINTMENT_BOT_TOKEN=123456:ABCDEF
MAIL_BOT_TOKEN=123456:ABCDEF

# Chat restrictions
ALLOWED_CHAT_IDS=123456789,987654321
ADMIN_CHAT_ID=123456789

# Timezone for display
LOCAL_TIMEZONE=Europe/Moscow

# Keywords for mail mention (comma-separated, optional)
KEYWORDS=urgent,asap
MENTION_TEXT=@nickname

# Daily agenda time (local, optional, HH:MM)
AGENDA_TIME=06:10

# Logging
LOG_LEVEL=INFO
